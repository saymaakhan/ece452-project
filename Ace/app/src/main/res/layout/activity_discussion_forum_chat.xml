<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#323131"
    tools:context=".ui.chat.DiscussionForumChat">

    <ImageView
        android:id="@+id/logo_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/discussion_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="35sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo_icon" />

    <Button
        android:id="@+id/horizontal_barrier"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_gravity="start"
        android:backgroundTint="#F44336"
        android:textColor="#F44336"
        android:textColorHint="#F44336"
        app:cornerRadius="32dp"
        app:layout_constraintTop_toBottomOf="@+id/discussion_name" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_discussion_forum_space"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="16dp"
        android:background="#323131"
        app:layout_constrainedHeight="true"
        app:layout_constraintBottom_toTopOf="@+id/text_discussion_forum_indicator"
        app:layout_constraintTop_toBottomOf="@+id/horizontal_barrier"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/text_discussion_forum_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/layout_discussion_forum_chatbox"
        app:layout_constraintStart_toStartOf="parent" />

    <RelativeLayout
        android:id="@+id/layout_discussion_forum_chatbox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/rounded_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">


        <EditText
            android:id="@+id/edit_discussion_forum_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:hint="Enter Message"
            android:inputType="text"
            android:maxLines="6"
            android:paddingHorizontal="8dp"
            android:paddingVertical="10dp"
            android:textColor="#FFFFFF"
            android:layout_toLeftOf="@+id/button_discussion_forum_send"
            android:textColorHint="#FFFFFF"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="8dp"
            tools:ignore="Autofill" />

        <Button
            android:id="@+id/button_discussion_forum_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/button_discussion_forum_close"
            android:textColor="@color/white"
            android:layout_marginRight="4dp"
            app:cornerRadius="20dp"
            android:backgroundTint="@color/colorPrimary"
            android:text="Send" />

        <Button
            android:id="@+id/button_discussion_forum_close"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="8dp"
            android:text="X"
            android:textColor="@color/white"
            app:cornerRadius="50dp"
            android:backgroundTint="@color/colorPrimary"/>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>