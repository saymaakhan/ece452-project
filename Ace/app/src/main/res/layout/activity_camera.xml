<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#292929"
    tools:context=".CameraActivity" >

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="12dp"
        android:fontFamily="@font/ubuntu_bold"
        android:includeFontPadding="false"
        android:text="Notes Scanner"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintTop_toTopOf="parent" />
    
   <LinearLayout
       android:id="@+id/linearLayout"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginStart="8dp"
       android:layout_marginEnd="8dp"
       android:layout_marginTop="15dp"
       android:background="@drawable/edittext_background"
       android:gravity="center_vertical"
       android:orientation="horizontal"
       android:paddingStart="10dp"
       android:paddingEnd="10dp"
       app:layout_constraintTop_toBottomOf="@id/title">

       <EditText
           android:id="@+id/textbox"
           android:layout_width="match_parent"
           android:layout_height="577dp"
           android:layout_marginStart="12dp"
           android:paddingTop="10dp"
           android:background="@null"
           android:fontFamily="@font/ubuntu_regular"
           android:hint="@string/scanned_text_visible_here"
           android:gravity="top"
           android:textColorHint="#8a8a96"
           android:imeOptions="actionDone"
           android:importantForAutofill="no"
           android:includeFontPadding="false"
           android:inputType="text|textMultiLine"
           android:textSize="20dp"
           android:textColor="@color/white"/>





   </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/plus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="#FFA500"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/ic_add"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/copy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:visibility="invisible"
        android:clickable="true"
        android:src="@drawable/ic_copy"
        app:layout_constraintBottom_toBottomOf="@+id/plus"
        app:layout_constraintEnd_toStartOf="@+id/plus" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/cam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:visibility="invisible"
        android:clickable="true"
        android:src="@drawable/ic_camera"
        app:layout_constraintBottom_toBottomOf="@+id/copy"
        app:layout_constraintEnd_toStartOf="@+id/copy" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/pdf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:visibility="invisible"
        android:clickable="true"
        android:src="@drawable/ic_pdf"
        app:layout_constraintBottom_toBottomOf="@+id/cam"
        app:layout_constraintEnd_toStartOf="@+id/cam" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:visibility="invisible"
        android:clickable="true"
        android:src="@drawable/ic_delete"
        app:layout_constraintBottom_toBottomOf="@+id/pdf"
        app:layout_constraintEnd_toStartOf="@+id/pdf" />


