<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <uses-permission android:name="android.permission.READ_CALENDAR" />
    <uses-permission android:name="android.permission.WRITE_CALENDAR" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS"/>

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Ace"
        tools:targetApi="28"
        android:requestLegacyExternalStorage="true">
        <!-- Set custom default icon. This is used when no icon is set for incoming notification messages.
     See README(https://goo.gl/l4GJaQ) for more. -->
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_icon"
            android:resource="@drawable/ic_launcher_round" />
        <!-- Set color used with incoming notification messages. This is used when no color is set for the incoming
             notification message. See README(https://goo.gl/6BKBk7) for more. -->
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_color"
            android:resource="@color/colorAccent" />

        <activity
            android:name=".ui.grades.AddItemGradeDialogFragment"
            android:exported="false" />
        <activity
            android:name=".ui.grades.AddScoreActivity"
            android:exported="false" />
        <activity
            android:name=".ui.grades.AddSyllabusItemDialogFragment"
            android:exported="false" />
        <activity
            android:name=".ui.grades.AddGradesActivity"
            android:exported="false" />
        <activity
            android:name=".ui.grades.AddClassDialogActivity"
            android:exported="false" />
        <activity
            android:name=".ui.chat.DiscussionForumChat"
            android:exported="false" />
        <activity
            android:name=".ui.chat.DiscussionForumTopics"
            android:exported="false" />
        <activity
            android:name=".ui.chat.SingleChat"
            android:exported="false" />
        <activity
            android:name=".ui.chat.ChatContacts"
            android:exported="false" />
        <activity
            android:name=".ui.login.DashboardActivity"
            android:exported="false"
            android:label="@string/title_activity_dashboard"
            android:theme="@style/Theme.Ace" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.login.LoginActivity"
            android:exported="false"
            android:label="@string/title_activity_login"/>
        <activity
            android:name=".calendar.CalendarActivity"
            android:exported="false"
            android:label="@string/title_activity_calendar"/>
        <activity
            android:name=".calendar.NotePreviewActivity"
            android:exported="false"
            android:label="@string/title_activity_note_preview"/>
        <activity
            android:name=".calendar.AddNoteActivity"
            android:exported="false"
            android:label="@string/title_activity_add_note"/>
        <activity
            android:name=".ui.camera.CameraActivity"
            android:exported="false"
            android:label="@string/title_camera_activity"/>
        <activity
            android:name=".ui.grades.GradesActivity"
            android:exported="false"
            android:label="GradesActivity" />
        <activity
            android:name=".ui.profile.ProfileActivity"
            android:exported="false"
            android:label="@string/title_profile_activity" />
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="com.example.ace.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
        <meta-data
            android:name="android.support.FILE_PROVIDER_PATHS"
            android:resource="@xml/file_paths" />

        </provider>
        <service
            android:name=".data.firebase.FirebaseService"
            android:permission="com.google.android.c2dm.permission.SEND"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
                <action android:name="com.google.android.c2dm.intent.RECEIVE"/>
            </intent-filter>
        </service>
    </application>

</manifest>