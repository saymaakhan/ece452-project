    <!-- Background with rounded corners and grey border at the bottom -->
    <item android:left="0dp" android:right="0dp" android:top="70dp" android:bottom="0dp">
        <shape android:shape="line">
            <solid android:color="@android:color/white" />
            <corners android:radius="8dp" />
            <stroke
