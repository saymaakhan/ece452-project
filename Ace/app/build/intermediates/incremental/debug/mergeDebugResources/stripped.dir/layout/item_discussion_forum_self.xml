<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:layout_marginEnd="8dp"
android:layout_marginTop="16dp">

<androidx.cardview.widget.CardView
    android:id="@+id/card_forum_message_self"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/primary"
    app:cardCornerRadius="12dp"
    app:cardElevation="0dp"
    app:cardPreventCornerOverlap="false"
    app:cardUseCompatPadding="true"
    app:layout_constraintEnd_toEndOf="parent"
    tools:layout_editor_absoluteY="28dp">

    <LinearLayout
        android:id="@+id/layout_forum_container_self"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#9A9999"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_forum_message_self"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:background="#9A9999"
            android:maxWidth="260dp"
            android:paddingLeft="12dp"
            android:paddingTop="8dp"
            android:paddingRight="12dp"
            android:text="This is a Message"
            android:textColor="@color/black"
            android:textSize="16sp" />
    </LinearLayout>

</androidx.cardview.widget.CardView>

<TextView
    android:id="@+id/text_forum_timestamp_self"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:text="12:00"
    android:textColor="@color/white"
    android:textSize="10sp"
    app:layout_constraintBottom_toBottomOf="@+id/card_forum_message_self"
    app:layout_constraintEnd_toStartOf="@+id/card_forum_message_self" />

</androidx.constraintlayout.widget.ConstraintLayout>